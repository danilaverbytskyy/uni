{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with g++", // Произвольное название задачи
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", // Включает отладочную информацию
                "-std=c++17", // Используемый стандарт C++
                "${file}", // Исходный файл, который сейчас открыт в редакторе
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe" // Имя выходного файла
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always", // Показывать терминал во время сборки
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}