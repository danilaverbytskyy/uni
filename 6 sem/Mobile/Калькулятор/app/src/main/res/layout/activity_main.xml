    <Button
        android:id="@+id/buttonZero"
        android:layout_width="201dp"
        android:layout_height="97dp"
        android:text="0"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:text="2"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.832" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="413dp"
        android:layout_height="98dp"
        android:background="#E91E63"
        android:gravity="center"
        android:text="SuperGraphicUltraModernCalculator"
        android:textColorLink="#fff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="412dp"
        android:layout_height="23dp"
        android:background="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <EditText
        android:id="@+id/numberInputField"
        android:layout_width="375dp"
        android:layout_height="108dp"
        android:background="#F05FE6"
        android:ems="10"
        android:gravity="center|right"
        android:hint="@string/input_number_hint"
        android:inputType="numberDecimal"
        android:digits="0123456789."
        android:paddingRight="12dp"
        android:textColorLink="#F2EFEF"
        android:textSize="48sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/signField"
        android:layout_width="375dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:background="#F05FE6"
        android:gravity="center|right"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberInputField"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/resultField"
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="#F05FE6"
        android:gravity="center|right"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signField"
        app:layout_constraintVertical_bias="0.009" />

</androidx.constraintlayout.widget.ConstraintLayout>